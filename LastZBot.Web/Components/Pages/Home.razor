@page "/"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Hosting
@using Microsoft.AspNetCore.SignalR.Client
@using Microsoft.JSInterop
@using LastZBot.Web.Services
@inject VisionApiClient VisionApi
@inject IConfiguration Configuration
@inject IWebHostEnvironment HostEnvironment
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

<PageTitle>Last Z Bot - Dashboard</PageTitle>

@code {
    private string? screenshotData;
    private string? errorMessage;
    private bool isCapturing = false;
    private bool isConnected = false;
    private string? deviceSerial;
    private int? deviceWidth;
    private int? deviceHeight;
    private bool showLiveView = true;
    
    private string? tapMessage;
    private string tapMessageType = "success";
    private ElementReference liveViewImgRef;
    private ElementReference screenshotImgRef;
    private (double X, double Y)? _pointerDown;
    private DotNetObjectReference<Home>? _pointerDownDotNetRef;
    private string keyboardText = "";
    
    private HubConnection? hubConnection;
    private string? liveFrameData;
    private int _frameCount;
    private int _displayFps;
    private DateTime _fpsWindowStart = DateTime.UtcNow;

    protected override async Task OnInitializedAsync()
    {
        await CheckConnectionStatus();
        
        // GetBaseAddressAsync makes a request so Service Discovery resolves botservice to the actual URL
        var visionServiceUrl = await VisionApi.GetBaseAddressAsync();
        
        if (string.IsNullOrEmpty(visionServiceUrl))
        {
            visionServiceUrl = Configuration["services:botservice:http:0"] ?? "http://localhost:5031";
        }
        else if (visionServiceUrl.StartsWith("https+http://", StringComparison.OrdinalIgnoreCase))
        {
            visionServiceUrl = "http://" + visionServiceUrl["https+http://".Length..];
        }
        else if (visionServiceUrl.StartsWith("http+https://", StringComparison.OrdinalIgnoreCase))
        {
            visionServiceUrl = "https://" + visionServiceUrl["http+https://".Length..];
        }
        // If still a logical host like "botservice" without port, try Aspire config
        if (visionServiceUrl.Contains("botservice") && !visionServiceUrl.Contains("localhost"))
        {
            visionServiceUrl = Configuration["services:botservice:http:0"] ?? visionServiceUrl;
        }

        hubConnection = new HubConnectionBuilder()
            .WithUrl($"{visionServiceUrl.TrimEnd('/')}/hubs/frame")
            .WithAutomaticReconnect()
            .Build();

        hubConnection.ServerTimeout = TimeSpan.FromSeconds(30);
        hubConnection.HandshakeTimeout = TimeSpan.FromSeconds(15);
        try { ((dynamic)hubConnection).MaximumReceiveMessageSize = 10L * 1024 * 1024; } catch { }

        hubConnection.On<string>("ReceiveFrame", (frame) =>
        {
            liveFrameData = frame;
            _frameCount++;
            var now = DateTime.UtcNow;
            if ((now - _fpsWindowStart).TotalSeconds >= 1)
            {
                _displayFps = _frameCount;
                _frameCount = 0;
                _fpsWindowStart = now;
            }
            if (showLiveView)
            {
                InvokeAsync(StateHasChanged);
            }
        });

        hubConnection.Reconnected += (connectionId) =>
        {
            errorMessage = null;
            return InvokeAsync(StateHasChanged);
        };

        hubConnection.Closed += (error) =>
        {
            if (error != null)
            {
                errorMessage = $"Live stream connection closed: {error.Message}";
            }
            return InvokeAsync(StateHasChanged);
        };

        try
        {
            await hubConnection.StartAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to connect to live stream: {ex.Message}";
        }
    }

    private async Task CheckConnectionStatus()
    {
        var status = await VisionApi.GetStatusAsync();
        if (status != null)
        {
            isConnected = status.Connected;
            deviceSerial = status.Device;
            deviceWidth = status.DeviceWidth;
            deviceHeight = status.DeviceHeight;
        }
    }

    private ElementReference _lastPointerDownImgRef;

    private async Task HandleImagePointerDown(MouseEventArgs e, ElementReference imgRef)
    {
        if (!isConnected)
        {
            tapMessage = "Device not connected";
            tapMessageType = "danger";
            await ClearTapMessageAfterDelay();
            return;
        }

        _lastPointerDownImgRef = imgRef;
        _pointerDown = (e.OffsetX, e.OffsetY);
        _pointerDownDotNetRef?.Dispose();
        _pointerDownDotNetRef = DotNetObjectReference.Create(this);

        try
        {
            var module = await JSRuntime.InvokeAsync<IJSObjectReference>("import", "/js/coordinateHelpers.js");
            await module.InvokeVoidAsync("capturePointerUp", imgRef, _pointerDownDotNetRef);
            await module.DisposeAsync();
        }
        catch (Exception ex)
        {
            tapMessage = $"Error: {ex.Message}";
            tapMessageType = "danger";
            _pointerDown = null;
            await ClearTapMessageAfterDelay();
        }
    }

    [JSInvokable]
    public async Task OnPointerUp(double offsetX, double offsetY)
    {
        if (!_pointerDown.HasValue || !isConnected) return;

        var start = _pointerDown.Value;
        _pointerDown = null;
        _pointerDownDotNetRef?.Dispose();
        _pointerDownDotNetRef = null;

        var w = deviceWidth ?? 720;
        var h = deviceHeight ?? 1280;

        try
        {
            var module = await JSRuntime.InvokeAsync<IJSObjectReference>("import", "/js/coordinateHelpers.js");
            var size = await module.InvokeAsync<BoundingRect>("getElementSize", _lastPointerDownImgRef);
            await module.DisposeAsync();

            var (startX, startY) = CoordinateMapper.DisplayToDevice(start.X, start.Y, size.Width, size.Height, w, h);
            var (endX, endY) = CoordinateMapper.DisplayToDevice(offsetX, offsetY, size.Width, size.Height, w, h);

            var dx = endX - startX;
            var dy = endY - startY;
            var distance = Math.Sqrt(dx * dx + dy * dy);

            if (distance < 5)
            {
                var success = await VisionApi.TapAsync(startX, startY);
                tapMessage = success ? $"Tap at ({startX}, {startY})" : "Tap failed";
                tapMessageType = success ? "success" : "danger";
            }
            else
            {
                var success = await VisionApi.SwipeAsync(startX, startY, endX, endY, 300);
                tapMessage = success ? $"Swipe ({startX},{startY}) -> ({endX},{endY})" : "Swipe failed";
                tapMessageType = success ? "success" : "danger";
            }
        }
        catch (Exception ex)
        {
            tapMessage = $"Error: {ex.Message}";
            tapMessageType = "danger";
        }

        await ClearTapMessageAfterDelay();
    }

    private async Task ClearTapMessageAfterDelay()
    {
        StateHasChanged();
        await Task.Delay(2000);
        tapMessage = null;
        StateHasChanged();
    }

    private async Task HandleKeyboardKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(keyboardText))
        {
            await SendText();
        }
    }

    private async Task SendText()
    {
        if (!isConnected || string.IsNullOrEmpty(keyboardText)) return;
        var text = keyboardText;
        keyboardText = "";
        var success = await VisionApi.SendTextAsync(text);
        tapMessage = success ? "Text sent" : "Failed to send text";
        tapMessageType = success ? "success" : "danger";
        await ClearTapMessageAfterDelay();
    }

    private async Task PressKey(string keycode)
    {
        if (!isConnected) return;
        var success = await VisionApi.PressKeyAsync(keycode);
        tapMessage = success ? "Key sent" : "Failed to send key";
        tapMessageType = success ? "success" : "danger";
        await ClearTapMessageAfterDelay();
    }

    private record BoundingRect(double Width, double Height);

    private async Task ConnectToDevice()
    {
        errorMessage = null;
        var connected = await VisionApi.ConnectAsync();
        if (connected)
        {
            await CheckConnectionStatus();
        }
        else
        {
            errorMessage = "Failed to connect to device. Ensure Redroid is running in the AppHost.";
        }
    }

    private async Task CaptureScreenshot()
    {
        errorMessage = null;
        isCapturing = true;
        StateHasChanged();

        try
        {
            if (!isConnected)
            {
                await ConnectToDevice();
            }

            var imageData = await VisionApi.CaptureScreenshotAsync();
            if (!string.IsNullOrEmpty(imageData))
            {
                screenshotData = imageData;
            }
            else
            {
                errorMessage = "Failed to capture screenshot";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isCapturing = false;
            StateHasChanged();
        }
    }

    public async ValueTask DisposeAsync()
    {
        _pointerDownDotNetRef?.Dispose();
        _pointerDownDotNetRef = null;
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
    }
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1>Last Z Bot Dashboard</h1>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Android View</h5>
                    <div class="btn-group" role="group">
                        <button class="btn btn-sm @(showLiveView ? "btn-primary" : "btn-outline-primary")" @onclick="() => showLiveView = true">
                            Live View
                        </button>
                        <button class="btn btn-sm @(!showLiveView ? "btn-primary" : "btn-outline-primary")" @onclick="() => showLiveView = false">
                            Screenshot
                        </button>
                    </div>
                    <div>
                        @if (!isConnected)
                        {
                            <button class="btn btn-sm btn-success me-2" @onclick="ConnectToDevice">
                                Connect
                            </button>
                        }
                        @if (!showLiveView)
                        {
                            <button class="btn btn-sm btn-outline-primary" @onclick="CaptureScreenshot" disabled="@isCapturing">
                                @if (isCapturing)
                                {
                                    <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                                }
                                Capture Screenshot
                            </button>
                        }
                    </div>
                </div>
                <div class="card-body text-center position-relative" style="min-height: 400px; background: #1a1a2e; padding: 0;">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger m-3">@errorMessage</div>
                    }
                    @if (!string.IsNullOrEmpty(tapMessage))
                    {
                        <div class="alert alert-@tapMessageType m-3 position-absolute top-0 end-0" style="z-index: 10; min-width: 200px;">@tapMessage</div>
                    }

                    @if (showLiveView)
                    {
                        <div style="padding: 1.25rem;">
                            @if (!string.IsNullOrEmpty(liveFrameData))
                            {
                                <div class="small text-muted mb-2">Click to tap, drag to swipe</div>
                                <div class="position-relative d-inline-block">
                                    <img src="@liveFrameData" alt="Android Live View" class="img-fluid" draggable="false"
                                         style="max-height: 600px; cursor: pointer; user-select: none;"
                                         @ref="liveViewImgRef"
                                         @onmousedown="e => HandleImagePointerDown(e, liveViewImgRef)"
                                         @ondragstart:preventDefault="true" />
                                    @if (HostEnvironment.IsDevelopment())
                                    {
                                        <span class="badge bg-dark bg-opacity-75 position-absolute top-0 start-0 m-2 px-2 py-1" style="font-family: monospace; font-size: 0.8rem;">@_displayFps FPS</span>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="d-flex flex-column justify-content-center align-items-center h-100" style="min-height: 400px; color: #6c757d;">
                                    <div class="spinner-border text-primary mb-3" role="status"></div>
                                    <p>Waiting for live stream...</p>
                                    @if (!isConnected)
                                    {
                                        <small class="text-warning">Device not connected</small>
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div style="padding: 1.25rem;">
                            @if (!string.IsNullOrEmpty(screenshotData))
                            {
                                <div class="small text-muted mb-2">Click to tap, drag to swipe</div>
                                <img src="@screenshotData" alt="Android Screenshot" class="img-fluid" draggable="false"
                                     style="max-height: 500px; cursor: pointer; user-select: none;"
                                     @ref="screenshotImgRef"
                                     @onmousedown="e => HandleImagePointerDown(e, screenshotImgRef)"
                                     @ondragstart:preventDefault="true" />
                            }
                            else
                            {
                                <div class="d-flex flex-column justify-content-center align-items-center h-100" style="min-height: 400px; color: #6c757d;">
                                    <div style="font-size: 4rem;">ðŸ“±</div>
                                    <p class="mt-3">Redroid Display</p>
                                    <small>Click "Capture Screenshot" to view current screen</small>
                                    <small class="text-muted mt-2">
                                        @if (isConnected)
                                        {
                                            <span class="text-success">Connected: @deviceSerial</span>
                                        }
                                        else
                                        {
                                            <span>ADB: Redroid (Not connected)</span>
                                        }
                                    </small>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0">Connection Status</h5>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <strong>ADB:</strong> 
                        @if (isConnected)
                        {
                            <span class="badge bg-success">Connected</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">Disconnected</span>
                        }
                    </div>
                    <div class="mb-2">
                        <strong>Device:</strong> 
                        <span class="text-muted">@(deviceSerial ?? "None")</span>
                    </div>
                    <div class="mb-2">
                        <strong>Target:</strong> 
                        <span class="text-muted">Redroid (ADB:5555)</span>
                    </div>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0">Keyboard Passthrough</h5>
                </div>
                <div class="card-body">
